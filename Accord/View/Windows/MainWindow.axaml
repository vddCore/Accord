<gui:FluentWindow x:Class="Accord.View.Windows.MainWindow"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:gui="clr-namespace:Glitonea.UI;assembly=Glitonea.UI"
                  xmlns:mvvm="clr-namespace:Glitonea.Mvvm;assembly=Glitonea"
                  xmlns:vm="clr-namespace:Accord.ViewModel.Windows"
                  xmlns:coreui="clr-namespace:Accord.View.CoreUI"
                  DataContext="{mvvm:DataContextSource vm:MainWindowViewModel}"
                  Width="380"
                  MinWidth="380"
                  MaxWidth="380"
                  Height="500"
                  MinHeight="400"
                  MaxHeight="640"
                  WindowStartupLocation="CenterScreen"
                  ShowIcon="False"
                  ShowMinimizeButton="False"
                  ShowMaximizeButton="False"
                  ShowCloseButton="False"
                  CanMaximize="False"
                  CanMinimize="False"
                  CanClose="False"
                  ShowInTaskbar="False"
                  Title="Accord"
                  CaptionBarBackground="#54000000"
                  Background="#3A000000">
    <coreui:MainView />
</gui:FluentWindow>